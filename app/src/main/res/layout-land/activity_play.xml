<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgq1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rtc.jeeranun.sahassaya.speedmath.PlayActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/katai"
        android:id="@+id/imageView5"
        android:layout_marginTop="230dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/katai"
        android:id="@+id/imageView6"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="80dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/katai"
        android:id="@+id/imageView7"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="150dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/katai"
        android:id="@+id/imageView8"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="200dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/katai"
        android:id="@+id/imageView9"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="280dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/katai"
        android:id="@+id/imageView10"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="300dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/katai"
        android:id="@+id/imageView11"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="450dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView3"
        android:background="@drawable/bgtext"
        android:gravity="center_vertical|center_horizontal"
        android:text="10"
        android:textSize="27sp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="160dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="normal|bold"
        android:layout_height="40dp"
        android:layout_width="60dp"
        android:clickable="true" />


    <TextView
        android:id="@+id/textView4"
        android:background="@drawable/bgtext"
        android:gravity="center_vertical|center_horizontal"
        android:text="20"
        android:textSize="27sp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="170dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:clickable="true" />

    <TextView
        android:id="@+id/textView5"
        android:background="@drawable/bgtext"
        android:gravity="center_vertical|center_horizontal"
        android:text="30"
        android:textSize="27sp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="200dp"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="normal|bold"
        android:clickable="true" />

    <TextView
        android:id="@+id/textView6"
        android:background="@drawable/bgtext"
        android:gravity="center_vertical|center_horizontal"
        android:text="40"
        android:textSize="27sp"
        android:layout_marginLeft="420dp"
        android:layout_marginTop="150dp"
        android:layout_height="40dp"
        android:layout_width="60dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="normal|bold"
        android:clickable="true" />

    <TextView
        android:text=" 20 + 30 = ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="36sp"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="20dp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Score = 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="36sp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold"
        android:layout_centerHorizontal="true" />



    <TextView
        android:text="30 sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_marginTop="100dp"
        android:textSize="36sp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hearts1"
            android:id="@+id/imageView"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hearts1"
            android:id="@+id/imageView3"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hearts1"
            android:id="@+id/imageView4"
            android:layout_weight="1" />
    </LinearLayout>


</RelativeLayout>
